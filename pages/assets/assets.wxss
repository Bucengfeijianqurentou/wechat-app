.container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.tip text {
  font-size: 28rpx;
  color: #666;
}

/* assets.wxss */
.page {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
  position: relative;
  box-sizing: border-box;
}

/* 头部搜索区域 */
.search-header {
  background: #ffffff;
  padding-bottom: 16rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-bar {
  display: flex;
  padding: 0 24rpx;
  margin-top: 8rpx;
}

.filter-item {
  position: relative;
  padding: 16rpx 24rpx;
  margin-right: 24rpx;
  border-radius: 28rpx;
  background: #f7f8fa;
  transition: all 0.3s;
}

.filter-item.active {
  background: #e8f3ff;
  color: #1989fa;
  font-weight: 500;
}

.filter-item text {
  font-size: 26rpx;
  line-height: 1;
}

/* 资产统计卡片 */
.stats-card {
  margin: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fd 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.stats-date {
  font-size: 24rpx;
  color: #969799;
}

.stats-content {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
}

.stats-value.available {
  color: #07c160;
}

.stats-value.borrowed {
  color: #1989fa;
}

.stats-value.maintenance {
  color: #ff976a;
}

.stats-label {
  font-size: 24rpx;
  color: #969799;
  margin-top: 4rpx;
}

/* 资产列表区域 */
.assets-container {
  padding: 24rpx;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.empty-icon {
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #323233;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #969799;
  margin-bottom: 32rpx;
  text-align: center;
}

.refresh-btn {
  display: flex !important;
  align-items: center !important;
  padding: 16rpx 32rpx !important;
}

.refresh-icon {
  margin-right: 8rpx;
}

/* 悬浮操作按钮 */
.float-button {
  position: fixed;
  right: 32rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1989fa 0%, #0570db 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
  transition: all 0.3s;
  z-index: 99;
}

.float-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(25, 137, 250, 0.3);
}

/* 资产列表样式 */
.assets-list {
  padding: 20rpx;
}

.asset-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.asset-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.asset-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.asset-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.asset-number {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.asset-stock {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.asset-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.asset-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-available {
  background: #e8f5e9;
  color: #4caf50;
}

.status-borrowed {
  background: #fff3e0;
  color: #ff9800;
}

.status-maintenance {
  background: #ffebee;
  color: #f44336;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #969799;
}

.empty-tips {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #c8c9cc;
}

.refresh-btn {
  margin-top: 30rpx;
}

.refresh-icon {
  margin-right: 8rpx;
} 