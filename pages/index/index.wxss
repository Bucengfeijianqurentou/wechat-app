/**index.wxss**/
.page {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 24rpx;
}

/* 状态栏样式 */
.status-bar {
  margin-bottom: 24rpx;
}

.connection-status {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ff4d4f;
  border-radius: 50%;
  margin-right: 12rpx;
}

.connection-status.connected .status-dot {
  background: #52c41a;
}

/* 资产概览卡片样式 */
.overview-section {
  margin-bottom: 32rpx;
}

.overview-cards {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.card {
  flex: 1;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  animation: slideIn 0.5s ease-out;
}

.total-assets {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

.available-assets {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.card-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.card-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计数据样式 */
.stats-grid {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
  animation: fadeIn 0.5s ease-out;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 快捷操作样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.action-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  transition: transform 0.3s;
}

.action-icon.borrow { background: #1890ff; }
.action-icon.return { background: #52c41a; }
.action-icon.transfer { background: #722ed1; }
.action-icon.maintain { background: #fa8c16; }

.action-item text {
  font-size: 24rpx;
  color: #666;
}

/* AI助手样式 */
.ai-assistant {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.ai-content {
  flex: 1;
  margin-left: 24rpx;
}

.ai-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.ai-desc {
  font-size: 24rpx;
  color: #666;
}

/* FAQ列表样式 */
.faq-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx 0;
}

.faq-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

/* 动画 */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
