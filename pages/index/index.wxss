/**index.wxss**/
.page {
  padding: 30rpx;
  background: #fff;
}

.header {
  margin-bottom: 20rpx;
}

.header text {
  font-size: 28rpx;
  color: #666;
}

.overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  background: #f8f9fc;
  padding: 30rpx;
  border-radius: 12rpx;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-number {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

.asset-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.asset-card {
  flex: 1;
  height: 180rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.asset-card:last-child {
  background: #07c160;
}

.blue-grad {
  background: linear-gradient(135deg, #1989fa, #36a6ff);
}

.green-grad {
  background: linear-gradient(135deg, #07c160, #10d273);
}

.asset-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.asset-number {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.asset-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.asset-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.8;
  color: #fff !important;
}

.title {
  display: block;
  font-size: 32rpx;
  margin: 30rpx 0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  gap: 8rpx;
}

.action-btn .icon {
  font-size: 48rpx;
  color: #fff;
}

.action-btn text {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

.quick-actions {
  display: flex;
  margin: 0 0 30rpx;
}

.quick-btn {
  flex: 1;
  height: 140rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.quick-btn:last-child {
  margin-right: 0;
}

.quick-btn text {
  font-size: 24rpx;
  color: #fff;
  margin-top: 12rpx;
}

.red { background: #ff4d4f; }
.orange { background: #ff7a45; }
.blue { background: #1989fa; }
.purple { background: #722ed1; }

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0 20rpx;
}

.section-header text {
  font-size: 32rpx;
}

.link {
  font-size: 26rpx;
  color: #1989fa;
}

.assistant {
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.assistant-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.icon {
  color: #8066e0;
  font-size: 32rpx;
}

.assistant-header text:last-child {
  font-size: 30rpx;
  color: #333;
}

.desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.questions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.questions text {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.action-icon {
  color: #fff !important;
  display: block !important;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.grid-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #1989fa;
  line-height: 1.4;
}

.grid-text {
  font-size: 24rpx;
  color: #646566;
  line-height: 1.4;
}

.stats-grid {
  padding: 20rpx 0 !important;
  background-color: #f7f8fa !important;
  margin-bottom: 30rpx;
}

.stats-grid-item {
  padding: 0 16rpx !important;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.stats-num {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 4rpx;
}

.stats-num.primary {
  color: #1989fa;
}

.stats-num.warning {
  color: #ff976a;
}

.stats-num.success {
  color: #07c160;
}

.stats-label {
  font-size: 24rpx;
  color: #969799;
}

.asset-grid {
  margin-bottom: 30rpx !important;
}

.asset-grid-item {
  width: 100% !important;
}

.asset-item {
  position: relative;
  width: 100%;
  height: 160rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}
