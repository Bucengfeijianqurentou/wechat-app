/* user.wxss */
.page {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fd 100%);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.user-card::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.1) 0%, rgba(25, 137, 250, 0) 100%);
  border-radius: 0 0 0 160rpx;
}

.user-header {
  padding: 40rpx !important;
  position: relative;
  z-index: 1;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.user-id {
  font-size: 24rpx;
  color: #969799;
  display: flex;
  align-items: center;
}

.user-id::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #1989fa;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 资产状态概览 */
.stats-section {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.stats-grid {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fd 100%) !important;
  padding: 24rpx 0 !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-grid-item {
  --grid-item-content-padding: 0 !important;
  padding: 0 8rpx !important;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  height: 100rpx;
}

.stats-item::after {
  content: '';
  position: absolute;
  right: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 60%;
  background: linear-gradient(180deg, transparent 0%, #ebedf0 50%, transparent 100%);
}

.stats-grid-item:last-child .stats-item::after {
  display: none;
}

.stats-num {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
  margin-bottom: 4rpx;
}

.stats-num.primary {
  color: #1989fa;
}

.stats-num.warning {
  color: #ff976a;
}

.stats-num.info {
  color: #7232dd;
}

.stats-num.success {
  color: #07c160;
}

.stats-label {
  font-size: 24rpx;
  color: #969799;
  line-height: 1;
}

/* 功能区块 */
.section-block {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 600;
  margin: 36rpx 0 20rpx;
  padding: 0 8rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 4rpx;
  height: 24rpx;
  background: #1989fa;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

.function-grid {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fd 100%);
  border-radius: 16rpx;
  padding: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  position: relative;
  padding: 16rpx 0;
}

.function-item::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 3rpx;
  background: transparent;
  transition: all 0.3s;
}

.function-item:active::after {
  background: currentColor;
}

.function-item text {
  font-size: 24rpx;
  color: #323233;
  font-weight: 500;
}

/* 列表组 */
.list-group {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fd 100%);
}

.van-cell {
  padding: 32rpx !important;
  background: transparent !important;
  position: relative;
}

.van-cell::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, #ebedf0 50%, transparent 100%);
  transform: scaleY(0.5);
}

.van-cell:last-child::after {
  display: none;
}

.van-cell__title {
  display: flex;
  align-items: center;
  font-size: 28rpx !important;
  font-weight: 500;
}

.van-cell__value {
  color: #969799 !important;
  font-size: 28rpx !important;
}

.van-icon {
  margin-right: 12rpx !important;
  font-size: 40rpx !important;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 48rpx 24rpx 24rpx;
}

.van-button--danger {
  border-radius: 12rpx !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 12rpx rgba(237, 63, 20, 0.2) !important;
}

.tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.tip text {
  font-size: 28rpx;
  color: #666;
} 