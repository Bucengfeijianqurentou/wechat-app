.page {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

.user-card {
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #1989fa 0%, #4bb0ff 100%);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.2);
}

.user-header {
  background: transparent !important;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
}

.user-avatar {
  margin-right: 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  padding: 16rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-role {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.user-id {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-section {
  margin: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.stats-grid {
  padding: 24rpx 0;
}

.stats-grid-item {
  padding: 16rpx 0;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stats-num.primary {
  color: #1989fa;
}

.stats-num.warning {
  color: #ff976a;
}

.stats-num.info {
  color: #ff4d4f;
}

.stats-num.success {
  color: #07c160;
}

.stats-label {
  font-size: 24rpx;
  color: #969799;
}

.section-block {
  margin: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 32rpx;
  background: #1989fa;
  border-radius: 2rpx;
}

.function-grid {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.function-item text {
  font-size: 24rpx;
  color: #646566;
}

.list-group {
  border-radius: 16rpx;
  overflow: hidden;
}

.logout-btn {
  margin: 48rpx 24rpx;
}