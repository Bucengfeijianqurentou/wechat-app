<van-popup
  show="{{ show }}"
  position="bottom"
  round
  custom-style="min-height: 60%"
  bind:close="onClose"
>
  <view class="chat-container">
    <!-- 顶部标题栏 -->
    <view class="chat-header">
      <view class="title">
        <text class="icon">🤖</text>
        <text>AI助手</text>
      </view>
      <van-icon name="cross" bind:tap="onClose" />
    </view>

    <!-- 聊天内容区域 -->
    <scroll-view 
      scroll-y 
      class="chat-content"
      scroll-into-view="msg-{{messages.length-1}}"
      scroll-with-animation
    >
      <block wx:for="{{ messages }}" wx:key="index">
        <view class="message {{item.type}}" id="msg-{{index}}">
          <view class="avatar" wx:if="{{item.type === 'ai'}}">🤖</view>
          <view class="avatar" wx:if="{{item.type === 'user'}}">👤</view>
          <view class="content">
            <text user-select>{{item.content}}</text>
            <view class="typing-indicator" wx:if="{{item.isTyping}}">
              <view class="dot"></view>
              <view class="dot"></view>
              <view class="dot"></view>
            </view>
          </view>
        </view>
      </block>
    </scroll-view>

    <!-- 预设问题区域 -->
    <view class="preset-questions" wx:if="{{showPresetQuestions}}">
      <view 
        class="question-item" 
        wx:for="{{presetQuestions}}" 
        wx:key="index"
        bind:tap="onQuestionTap"
        data-question="{{item}}"
      >
        {{item}}
      </view>
    </view>

    <!-- 底部输入区域 -->
    <view class="chat-footer">
      <van-field
        value="{{ inputValue }}"
        placeholder="输入您的问题..."
        border="{{ false }}"
        bind:change="onInputChange"
        custom-style="background: #f7f8fa; padding: 8rpx 24rpx; border-radius: 36rpx;"
      >
        <van-button 
          slot="button" 
          size="small" 
          type="primary" 
          bind:tap="onSend"
          custom-style="border-radius: 36rpx;"
        >发送</van-button>
      </van-field>
    </view>
  </view>
</van-popup> 